<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TheMovieDBApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkLight</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="backgroundColor">@color/colorBaseLight</item>
        <item name="backgroundTint">@color/colorBaseNight</item>
        <item name="android:textColor">@color/colorBaseNight</item>

    </style>

    <style name="Theme.TheMovieDBApp" parent="Base.Theme.TheMovieDBApp" />

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">.01sp</item>
        <item name="android:alpha">0.0</item>
        <item name="actionTextColorAlpha">0</item>
    </style>

    <style name="Toolbar.TitleText.Expanded" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>


    <style name="SearchViewColors" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="searchHintIcon">@drawable/ic_search</item>
        <item name="android:textColor">?backgroundColor</item>
        <item name="android:textColorHint">?backgroundColor</item>
        <item name="android:tint">?backgroundColor</item>
        <item name="android:editTextColor">?backgroundColor</item>
    </style>


</resources>